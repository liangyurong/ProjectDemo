<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyr.dao.db1.StudentDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lyr.entity.Student">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="my_email" property="myEmail" />
    </resultMap>

    <select id="selectByEmail" resultType="com.lyr.entity.Student">
        select * from student where email like '%com%';
    </select>

    <select id="findStudentById" resultType="com.lyr.entity.Student">
        select * from student where id = #{id};
    </select>

</mapper>
